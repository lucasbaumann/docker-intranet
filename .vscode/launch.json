{    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch application",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/html/intranet-sci/index.php",
            "cwd": "${workspaceFolder}",
            "port": 9000
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/html"
            },
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}